%% -*- erlang -*-
{erl_opts, [debug_info,
            {i, "./gen-erl/"},
            {platform_define, "R15", 'gen_tcp_r15b_workaround'},
             {src_dirs, ["src", "gen-erl"]}
            ]}.
{deps, [
  {thrift, ".*",
   {git, "git@github.com:zhangjiayin/thrift-erlang.git", {branch, "master"}}}]}.

{cover_enabled, true}.
{lib_dirs, ["./gen-erl"]}.
{include_dirs, ["./gen-erl"]}. 
{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.
{dialyzer_opts, [{warnings, [no_return,
                             no_unused,
                             no_improper_lists,
                             no_fun_app,
                             no_match,
                             no_opaque,
                             no_fail_call,
                             error_handling,
                             race_conditions,
                             behaviours,
                             unmatched_returns]}]}.
